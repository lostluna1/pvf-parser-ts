{
  "name": "pvf-parser-ts",
  "displayName": "PVF Pack Explorer",
  "description": "Open, browse and edit PVF pack files.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
  "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:pvf"
  ],
  "icon": "media/icons8-源代码-48.png",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "PVF Pack Explorer",
      "properties": {
        "pvf.npkRoot": {
          "type": "string",
          "default": "",
          "description": "NPK 文件根目录（通常为游戏目录下的 ImagePacks2）。"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pvfExplorer",
          "title": "PVF",
          "icon": "./media/icons8-源代码-48.png"
        }
      ]
    },
    "views": {
      "pvfExplorer": [
        {
          "id": "pvfExplorerView",
          "name": "PVF 包管理器",
          "icon": "codicon:archive"
        }
      ]
  },
  "iconThemes": [
    {
      "id": "pvfIconTheme",
      "label": "PVF File Icons",
      "path": "./media/pvf-icon-theme.json"
    }
  ],
  "commands": [
      {
        "command": "pvf.openAniEditor",
        "title": "ANI 编辑器"
      },
      {
        "command": "pvf.openNpk",
        "title": "打开 NPK/IMG 并解析"
      },
      {
        "command": "pvf.setNpkRoot",
        "title": "设置 NPK 根目录"
      },
      {
        "command": "pvf.previewAni",
    "title": "预览 ANI"
      },
      {
        "command": "pvf.openPack",
        "title": "打开 PVF 封包"
      },
      {
        "command": "pvf.selectForCompare",
        "title": "选择以进行比较"
      },
      {
        "command": "pvf.compareWithSelection",
        "title": "与所选比较"
      },
      {
        "command": "pvf.findReferences",
        "title": "查找文件引用"
      },
      {
        "command": "pvf.cut",
        "title": "剪切"
      },
      {
        "command": "pvf.copy",
        "title": "复制"
      },
      {
        "command": "pvf.paste",
        "title": "粘贴"
      },
      {
        "command": "pvf.copyPath",
        "title": "复制路径"
      },
      {
        "command": "pvf.createFolder",
        "title": "新建文件夹"
      },
      {
        "command": "pvf.deleteFolder",
        "title": "删除文件夹"
      },
      {
        "command": "pvf.createFile",
        "title": "新建文件"
      },
      {
        "command": "pvf.savePack",
        "title": "保存 PVF 封包"
      },
      {
        "command": "pvf.savePackInPlace",
        "title": "保存到当前文件"
      },
      {
        "command": "pvf.exportFile",
        "title": "导出文件"
      },
      {
        "command": "pvf.replaceFile",
        "title": "替换文件…"
      },
      {
        "command": "pvf.deleteFile",
        "title": "删除文件"
      },
      {
        "command": "pvf.openFile",
        "title": "打开文件"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pvf.openPack",
          "when": "view == pvfExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "pvf.savePack",
          "when": "view == pvfExplorerView",
          "group": "navigation@2"
        },
        {
          "command": "pvf.savePackInPlace",
          "when": "view == pvfExplorerView",
          "group": "navigation@3"
        }
      ],
      "editor/context": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani || resourceExtname == .ANI",
          "group": "navigation@9"
        }
      ],
      "editor/title": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani || resourceExtname == .ANI",
          "group": "navigation@99"
        },
        {
          "command": "pvf.openAniEditor",
          "when": "resourceExtname == .ani || resourceExtname == .ANI",
          "group": "navigation@98"
        }
      ],
      "explorer/context": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani || resourceExtname == .ANI",
          "group": "navigation@9"
        },
        {
          "command": "pvf.openAniEditor",
          "when": "resourceExtname == .ani || resourceExtname == .ANI",
          "group": "navigation@9"
        }
      ],
      "view/item/context": [
        {
          "command": "pvf.exportFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@2"
        },
        {
          "command": "pvf.selectForCompare",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.compareWithSelection",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.findReferences",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.cut",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@3"
        },
        {
          "command": "pvf.copy",
          "when": "view == pvfExplorerView && (viewItem == pvf.file || viewItem == pvf.folder)",
          "group": "navigation@3"
        },
        {
          "command": "pvf.paste",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@3"
        },
        {
          "command": "pvf.copyPath",
          "when": "view == pvfExplorerView && (viewItem == pvf.file || viewItem == pvf.folder)",
          "group": "navigation@3"
        },
        {
          "command": "pvf.replaceFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@3"
        },
        {
          "command": "pvf.deleteFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@4"
        },
        {
          "command": "pvf.createFolder",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@1"
        },
        {
          "command": "pvf.createFile",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@2"
        },
        {
          "command": "pvf.deleteFolder",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
  "vscode:prepublish": "npm run compile",
  "check:icons": "node ./scripts/check-icons.cjs"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
  "iconv-lite": "^0.6.3",
  "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
