{
  "name": "pvf-parser-ts",
  "displayName": "PVF Code",
  "description": "Open, browse and edit PVF pack files.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:pvf"
  ],
  "icon": "media/icons8-源代码-48.png",
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pvf-act",
        "aliases": [
          "ACT",
          "pvf-act"
        ],
        "extensions": [
          ".act"
        ],
        "configuration": "./src/scriptLang/act/language-configuration.json"
      },
      {
        "id": "pvf-ani",
        "aliases": [
          "ANI",
          "pvf-ani"
        ],
        "extensions": [
          ".ani"
        ],
        "configuration": "./src/scriptLang/ani/language-configuration.json"
      },
      {
        "id": "pvf-skl",
        "aliases": [
          "SKL",
          "pvf-skl"
        ],
        "extensions": [
          ".skl"
        ],
        "configuration": "./src/scriptLang/skl/language-configuration.json"
      },
      {
        "id": "pvf-lst",
        "aliases": ["LST", "pvf-lst"],
        "extensions": [".lst"],
        "configuration": "./src/scriptLang/lst/language-configuration.json"
      },
      {
        "id": "pvf-str",
        "aliases": ["STR", "pvf-str"],
        "extensions": [".str"],
        "configuration": "./src/scriptLang/str/language-configuration.json"
      }
      ,{
        "id": "pvf-equ",
        "aliases": ["EQU", "pvf-equ"],
        "extensions": [".equ"],
        "configuration": "./src/scriptLang/equ/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pvf-act",
        "scopeName": "source.pvf-act",
        "path": "./syntaxes/pvf-act.tmLanguage.json"
      },
      {
        "language": "pvf-ani",
        "scopeName": "source.pvf-ani",
        "path": "./syntaxes/pvf-ani.tmLanguage.json"
      },
      {
        "language": "pvf-skl",
        "scopeName": "source.pvf-skl",
        "path": "./syntaxes/pvf-skl.tmLanguage.json"
      },
      {
        "language": "pvf-lst",
        "scopeName": "source.pvf-lst",
        "path": "./syntaxes/pvf-lst.tmLanguage.json"
      },
      {
        "language": "pvf-str",
        "scopeName": "source.pvf-str",
        "path": "./syntaxes/pvf-str.tmLanguage.json"
      }
      ,{
        "language": "pvf-equ",
        "scopeName": "source.pvf-equ",
        "path": "./syntaxes/pvf-equ.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "PVF Pack Explorer",
      "properties": {
        "pvf.npkRoot": {
          "type": "string",
          "default": "",
          "description": "NPK 文件根目录（通常为游戏目录下的 ImagePacks2）。"
        },
        "pvf.showScriptDisplayName": {
          "type": "boolean",
          "default": true,
          "description": "在 PVF 资源树中文件后追加脚本显示名（来自 .lst 解析）。"
        },
        "pvf.showScriptCode": {
          "type": "boolean",
          "default": true,
          "description": "在 PVF 资源树中文件后追加 <代码>（来自 .lst 解析）。"
        },
        "pvf.metadata.excludeExtensions": {
          "type": "string",
          "default": ".nut,.lst,.ani,.ani.als,.als,.ui,.png,.jpg,.jpeg,.dds,.bmp,.tga,.gif,.wav,.ogg,.mp3,.bin",
          "description": "解析 [name] 标签时要排除的扩展名（逗号/空格/分号分隔）。其他所有文件都会扫描其文本前 32KB 是否含 [name]。"
        },
        "pvf.encodingMode": {
          "type": "string",
          "enum": [
            "AUTO",
            "KR",
            "TW",
            "CN",
            "JP",
            "UTF8"
          ],
          "default": "AUTO",
          "description": "文本解码基准：KR=cp949, TW=cp950, CN=gb18030, JP=shift_jis, UTF8=utf8；AUTO 时保持原逻辑 (.nut=cp949 其他=cp950)。影响读取/写入文本与 stringtable。"
        },
        "pvf.closeVirtualEditorsOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "启动/重载 VS Code 时自动关闭上次遗留的 pvf: 虚拟文件标签页，防止自动恢复。"
        },
        "pvf.script.convertStringLink": {
          "type": "boolean",
          "default": true,
          "description": "解析器 :: 自动转换字符串链接 <id::name`文字`> 为 `文字`。关闭后仍保留链接形式 (文本被清空为 `` )。"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pvfExplorer",
          "title": "PVF",
          "icon": "./media/icons8-源代码-48.png"
        }
      ]
    },
    "views": {
      "pvfExplorer": [
        {
          "id": "pvfExplorerView",
          "name": "",
          "icon": "codicon:archive"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "pvfIconTheme",
        "label": "PVF File Icons",
        "path": "./media/pvf-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "pvf.searchInPack",
        "title": "搜索 PVF 内部文件",
        "icon": "$(search)"
      },
      {
        "command": "pvf.openAniEditor",
        "title": "ANI 编辑器"
      },
      {
        "command": "pvf.openNpk",
        "title": "打开 NPK/IMG 并解析"
      },
      {
        "command": "pvf.setNpkRoot",
        "title": "设置 NPK 根目录"
      },
      {
        "command": "pvf.previewAni",
        "title": "预览 ANI"
      },
      {
        "command": "pvf.openPack",
        "title": "打开PVF"
      },
      {
        "command": "pvf.selectForCompare",
        "title": "选择以进行比较"
      },
      {
        "command": "pvf.compareWithSelection",
        "title": "与所选比较"
      },
      {
        "command": "pvf.findReferences",
        "title": "查找文件引用"
      },
      {
        "command": "pvf.cut",
        "title": "剪切"
      },
      {
        "command": "pvf.copy",
        "title": "复制"
      },
      {
        "command": "pvf.paste",
        "title": "粘贴"
      },
      {
        "command": "pvf.copyPath",
        "title": "复制路径"
      },
      {
        "command": "pvf.createFolder",
        "title": "新建文件夹"
      },
      {
        "command": "pvf.deleteFolder",
        "title": "删除文件夹"
      },
      {
        "command": "pvf.createFile",
        "title": "新建文件"
      },
      {
        "command": "pvf.savePack",
        "title": "另存PVF"
      },
      {
        "command": "pvf.savePackInPlace",
        "title": "保存PVF"
      },
      {
        "command": "pvf.exportFile",
        "title": "导出文件"
      },
      {
        "command": "pvf.replaceFile",
        "title": "替换文件…"
      },
      {
        "command": "pvf.deleteFile",
        "title": "删除文件"
      },
      {
        "command": "pvf.openFile",
        "title": "打开文件"
      },
      {
        "command": "pvf.openSettings",
        "title": "插件设置"
      },
      {
        "command": "pvf.showReactDemo",
        "title": "React Demo 面板"
      }
    ],
    "keybindings": [
      {
        "command": "pvf.searchInPack",
        "key": "ctrl+alt+p",
        "when": "pvf.hasOpenPack"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pvf.openSettings",
          "when": "view == pvfExplorerView",
          "group": "navigation@0"
        },
        {
          "command": "pvf.openPack",
          "when": "view == pvfExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "pvf.savePack",
          "when": "view == pvfExplorerView && pvf.hasOpenPack",
          "group": "navigation@2"
        },
        {
          "command": "pvf.savePackInPlace",
          "when": "view == pvfExplorerView && pvf.hasOpenPack",
          "group": "navigation@3"
        },
        {
          "command": "pvf.searchInPack",
          "when": "view == pvfExplorerView && pvf.hasOpenPack",
          "group": "navigation@4"
        }
      ],
      "editor/context": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani",
          "group": "navigation@9"
        }
        ,{
          "command": "pvf.showReactDemo",
          "when": "editorTextFocus",
          "group": "navigation@50"
        }
      ],
      "editor/title": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani",
          "group": "navigation@99"
        },
        {
          "command": "pvf.openAniEditor",
          "when": "resourceExtname == .ani",
          "group": "navigation@98"
        }
      ],
      "explorer/context": [
        {
          "command": "pvf.previewAni",
          "when": "resourceExtname == .ani",
          "group": "navigation@9"
        },
        {
          "command": "pvf.openAniEditor",
          "when": "resourceExtname == .ani",
          "group": "navigation@9"
        }
      ],
      "view/item/context": [
        {
          "command": "pvf.exportFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@2"
        },
        {
          "command": "pvf.selectForCompare",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.compareWithSelection",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.findReferences",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@1"
        },
        {
          "command": "pvf.cut",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@3"
        },
        {
          "command": "pvf.copy",
          "when": "view == pvfExplorerView && (viewItem == pvf.file || viewItem == pvf.folder)",
          "group": "navigation@3"
        },
        {
          "command": "pvf.paste",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@3"
        },
        {
          "command": "pvf.copyPath",
          "when": "view == pvfExplorerView && (viewItem == pvf.file || viewItem == pvf.folder)",
          "group": "navigation@3"
        },
        {
          "command": "pvf.replaceFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@3"
        },
        {
          "command": "pvf.deleteFile",
          "when": "view == pvfExplorerView && viewItem == pvf.file",
          "group": "navigation@4"
        },
        {
          "command": "pvf.createFolder",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@1"
        },
        {
          "command": "pvf.createFile",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@2"
        },
        {
          "command": "pvf.deleteFolder",
          "when": "view == pvfExplorerView && viewItem == pvf.folder",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
  "postcompile": "node scripts/copy-script-tags.cjs && node scripts/copy-webview.cjs",
  "build:webview": "node scripts/build-webview.mjs",
  "build:all": "npm run compile && npm run postcompile && npm run build:webview",
  "vscode:prepublish": "npm run build:all -- --prod",
    "check:icons": "node ./scripts/check-icons.cjs"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.9.2",
    "esbuild": "^0.23.0"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.52.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
  "@fluentui/react-motion-components-preview": "^0.4.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "iconv-lite": "^0.6.3",
    "sqlite3": "^5.1.7"
  }
}
